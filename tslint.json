{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "indent": [true, "tabs", 4],
        "ter-indent": [true, "tab", { // This comes from the tslint-eslint-rules package
            "SwitchCase": 1
        }],
        "max-line-length": false,
        "no-console": false, // allow console.log. This will be disabled in production build via UglifyJsPlugin
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "ordered-imports": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "quotemark": [false, "avoid-escape"]
    },
    "rulesDirectory": []
}