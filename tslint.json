{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [true, "tabs", 4],
        "max-line-length": false,
        "no-angle-bracket-type-assertion": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "trailing-comma": [
            true,
            {
              "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
              }
            }
        ],
        "quotemark": [true, "single", "double"]
    },
    "rulesDirectory": []
}