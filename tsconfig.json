{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": ["es6", "dom"],
    //"types": ["webpack-env", "node"],
    "typeRoots": [
      // add path to @types
      "node_modules/",
      "node_modules/@types"
    ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
